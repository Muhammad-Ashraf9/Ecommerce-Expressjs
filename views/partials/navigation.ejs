<header>
  <nav>
    <div class="nav-logo">
      <a class="nav-logo" href="/">
        <i class="fa-brands fa-shopify fa-2xl"></i>
        <span class="nav-logo-subtitle">shopy</span>
      </a>
    </div>
    <ul class="nav-container">
      <li class="nav-item">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/products"
          >Products</a
        >
      </li>
      <% if (isAuthenticated) { %>

      <li class="nav-item">
        <a class="<%= path === '/cart' ? 'active' :''%>" href="/cart">cart</a>
      </li>
      <li class="nav-item">
        <a class="<%= path === '/orders' ? 'active' :''%>" href="/orders"
          >orders</a
        >
      </li>
      <li class="nav-item">
        <a
          class="<%= path === '/admin/add-product' ? 'active' :''%>"
          href="/admin/add-product"
          >Add Product</a
        >
      </li>
      <li class="nav-item">
        <a
          class="<%= path === '/admin/products' ? 'active' :''%>"
          href="/admin/products"
          >Admin products</a
        >
      </li>
      <% } %> <% if (!isAuthenticated) { %>
      <li class="nav-item">
        <a
          class="btn btn-white <%= path === '/login' ? 'active' :''%>"
          href="/login"
          >Login</a
        >
      </li>
      <li class="nav-item">
        <a
          class="btn btn-white <%= path === '/signup' ? 'active' :''%>"
          href="/signup"
          >Sign up</a
        >
      </li>
      <% }else{ %>
      <li class="nav-item">
        <form action="/logout" method="post">
          <input type="hidden" name="CSRFToken" value="<%= CSRFToken%>" />
          <button type="submit">Logout</button>
        </form>
      </li>

      <% } %>
    </ul>
  </nav>
</header>
