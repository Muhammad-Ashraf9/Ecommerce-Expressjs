<%- include('../partials/head') %>
<link rel="stylesheet" href="/css/products.css" />
<link rel="stylesheet" href="/css/card.css" />
<script defer src="/js/script.js"></script>
</head>

<%- include('../partials/navigation') %>
<main>
  <h1><%=pageTitle %></h1>
  <ul class="products-container">
    <% if(products.length > 0){ %>
    <input type="hidden" name="CSRFToken" value="<%= CSRFToken%>" />

    <% for(let product of products){ %>
    <li class="card">
        <div class="card-img">
          <!-- slice to remove puplic from url which is a static folder -->
          <img
            src="<%= product.imageUrl.slice(6) %>"
            alt="<%= product.title %>"
          />
        </div>
        <div class="card-info">
          <p class="text-title"><%= product.title %></p>
          <p class="text-body"><%= product.description.slice(0,100) %></p>
        </div>

        <div class="card-footer">
          <span class="text-title"><%= product.price %> $</span>
          <a href="/admin/edit-product/<%=product._id%>?edit=true" class="btn"
            >Edit</a
          >
          <button class="btn btn--delete" name="<%= product._id %>">
            Delete
          </button>
        </div>
    </li>
    <% } %> <% }else{ %>
    <li>No products found</li>
    <% } %>
  </ul>
</main>
<%- include('../partials/footer') %>
